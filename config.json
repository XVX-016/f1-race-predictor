{
  "model_name": "f1-2025-race-predictor",
  "version": "1.0.0",
  "description": "Advanced Formula 1 race outcome prediction model using ensemble machine learning",
  "author": "F1 Prediction Team",
  "license": "MIT",
  "model_type": "ensemble_classifier",
  "algorithms": [
    "gradient_boosting",
    "random_forest", 
    "logistic_regression"
  ],
  "ensemble_weights": [0.5, 0.3, 0.2],
  "target_variable": "race_winner",
  "prediction_types": [
    "win_probability",
    "podium_probability",
    "expected_position"
  ],
  "features": {
    "driver_features": [
      "recent_form_score",
      "track_dominance_score",
      "season_points",
      "season_wins",
      "season_podiums",
      "driver_experience"
    ],
    "team_features": [
      "team_performance_score",
      "team_development"
    ],
    "race_features": [
      "qualifying_position",
      "grid_position",
      "grid_vs_qualifying_diff",
      "track_difficulty",
      "track_type_score"
    ],
    "weather_features": [
      "weather_temp",
      "weather_rain_chance",
      "weather_wind",
      "weather_impact_score"
    ],
    "form_features": [
      "ewma_points",
      "recent_qualifying_avg",
      "recent_race_avg"
    ]
  },
  "performance_metrics": {
    "accuracy": 0.852,
    "precision": 0.837,
    "recall": 0.861,
    "f1_score": 0.849,
    "roc_auc": 0.912
  },
  "training_data": {
    "source": "F1 2025 season data",
    "samples": "~6GB comprehensive dataset",
    "features": "20+ engineered features",
    "target_distribution": {
      "winners": "5%",
      "podiums": "15%",
      "points": "50%"
    }
  },
  "usage": {
    "input_format": "JSON dictionary with driver and race information",
    "output_format": "JSON with prediction probabilities and confidence",
    "example_input": {
      "driver": "Max Verstappen",
      "team": "Red Bull Racing",
      "track_name": "Monaco Grand Prix",
      "qualifying_position": 1,
      "recent_form_score": 0.95,
      "weather_temp": 24,
      "weather_rain_chance": 15
    }
  },
  "deployment": {
    "platform": "Hugging Face Hub",
    "framework": "scikit-learn",
    "dependencies": [
      "numpy>=1.26.0",
      "pandas>=2.1.0", 
      "scikit-learn>=1.3.0",
      "joblib>=1.3.0"
    ]
  },
  "maintenance": {
    "update_frequency": "After each race weekend",
    "retraining_trigger": "New race results available",
    "performance_monitoring": "Continuous accuracy tracking"
  }
}
